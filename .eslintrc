{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "curly": "error",
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "eqeqeq": ["error", "always", {"null": "ignore"}],
    "quotes": ["error", "single"],
    "no-global-assign": "error",
    "no-redeclare": "error",
    "no-undef": "error",
    "no-trailing-spaces": "error"
  }
}