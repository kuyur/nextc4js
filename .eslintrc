{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "curly": "error",
    "semi": ["error", "always"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "eqeqeq": ["error", "smart"],
    "quotes": ["error", "single"],
    "no-global-assign": "error",
    "no-redeclare": "error",
    "no-undef": "error",
    "no-trailing-spaces": "error",
    "max-len": ["error", { "code": 120 }]
  }
}